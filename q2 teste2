 #include <stdio.h>
void main(void){
        int num1 , num2;
        printf("digite um numero1:\n");
        scanf("%d", &num1);
        printf("digite o numero2:\n");
        scanf("%d" , &num2);
        int i;
        if (num1>num2){
                i=num1;
                printf("saida;\n");
                while (i>=num2){
                        if (i%2==0){
                                printf("%d\n",i);
                        }
                        i--;
                }
        }else{
                i=num2;
                printf("saida:\n");
                while (i>=num1){
                        if(i%2==0){
                               printf("%d\n",i);
                        }
                        i--;
                 }
       }
}
